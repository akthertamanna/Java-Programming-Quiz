<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/app_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.ShopActivity">

    <LinearLayout
        android:id="@+id/layer_home_top"
        android:paddingTop="15dp"
        android:paddingHorizontal="20dp"
        android:background="@color/primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >


        <include
            android:id="@+id/layout_shop_features"
            layout="@layout/layout_features"/>

    </LinearLayout>


    <LinearLayout
        android:paddingHorizontal="20dp"
        android:id="@+id/layer_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layer_home_top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/shop_now"
            android:textAllCaps="true"
            android:textColor="@color/title_on_light"
            android:textSize="@dimen/quizPlayTitle" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layer_top">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginBottom="150dp"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardview_coin_watch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:elevation="0dp"
                app:cardCornerRadius="15dp"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="@string/coin"
                        android:textAllCaps="false"
                        android:textColor="@color/primary"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/primary_15px"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="20dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_light"
                            android:paddingHorizontal="35dp"
                            android:text="@string/watch_a_video_to_get_free_coins"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="30dp"
                            android:gravity="center">

                            <LinearLayout
                                android:id="@+id/layer_coin_coin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageView"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/coin_coin" />

                                <TextView
                                    android:id="@+id/txt_amount_coin_receive"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:text="10"
                                    android:textColor="@color/white"
                                    android:textSize="20sp" />

                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/layer_btn_watch_to_buy_coin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/layer_coin_coin"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/bg_orange_round_with_border_15px"
                                android:gravity="center"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="5dp">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/video_ad" />
                            </LinearLayout>


                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardview_hint_buy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:elevation="0dp"
                app:cardCornerRadius="15dp"
                app:layout_constraintTop_toBottomOf="@+id/cardview_coin_watch">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Hint"
                        android:textAllCaps="false"
                        android:textColor="@color/primary"
                        android:textSize="20sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingHorizontal="0dp"
                        android:paddingVertical="20dp">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/primary_15px"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img111"
                                android:layout_width="46dp"
                                android:layout_height="46dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginVertical="20dp"
                                android:src="@drawable/baseline_lightbulb_24" />

                            <LinearLayout
                                android:id="@+id/layer_btn_watch_to_get_hint"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_below="@+id/img111"
                                android:background="@drawable/secondary_with_radius_bottom"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/video_ad" />

                            </LinearLayout>

                        </RelativeLayout>

                        <View
                            android:layout_width="10dp"
                            android:layout_height="10dp" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/primary_15px"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img112"
                                android:layout_width="46dp"
                                android:layout_height="46dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginVertical="20dp"
                                android:src="@drawable/baseline_lightbulb_24" />

                            <LinearLayout
                                android:id="@+id/layer_btn_buy_hint"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_below="@+id/img112"
                                android:background="@drawable/secondary_with_radius_bottom"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/coin_coin" />

                                <TextView
                                    android:id="@+id/txt_price_hint_buy_with_coin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="6dp"
                                    android:fontFamily="@font/poppins_light"
                                    android:text="25"
                                    android:textAlignment="center"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="24sp" />


                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/primary_15px"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="20dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_light"
                                android:paddingHorizontal="20dp"
                                android:text="@string/use_hint_for_difficult_question"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/poppins_extra_bold"
                                android:text="X 5"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                        </LinearLayout>


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="30dp"
                            android:gravity="center">

                            <LinearLayout
                                android:id="@+id/layer_hint_coin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="52dp"
                                    android:layout_height="52dp"
                                    android:src="@drawable/baseline_lightbulb_24" />

                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/layer_btn_buy_hint_package"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/layer_hint_coin"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/bg_orange_round_with_border_15px"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="1dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/coin_coin" />

                                <TextView
                                    android:id="@+id/txt_price_hint_package"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:fontFamily="@font/poppins_light"
                                    android:text="100"
                                    android:textAlignment="center"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="20sp" />

                            </LinearLayout>


                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardview_fifty_fifty_buy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:elevation="0dp"
                app:cardCornerRadius="15dp"
                app:layout_constraintTop_toBottomOf="@+id/cardview_hint_buy">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="@string/fifty_fifty_lifeline"
                        android:textAllCaps="false"
                        android:textColor="@color/primary"
                        android:textSize="20sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingHorizontal="0dp"
                        android:paddingVertical="20dp">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/primary_15px"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img113"
                                android:layout_width="46dp"
                                android:layout_height="46dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginVertical="20dp"
                                android:src="@drawable/fifty_fifty" />

                            <LinearLayout
                                android:id="@+id/layer_btn_watch_to_get_fifty_fifty"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_below="@+id/img113"
                                android:background="@drawable/secondary_with_radius_bottom"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/video_ad" />

                            </LinearLayout>

                        </RelativeLayout>

                        <View
                            android:layout_width="10dp"
                            android:layout_height="10dp" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/primary_15px"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img114"
                                android:layout_width="46dp"
                                android:layout_height="46dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginVertical="20dp"
                                android:src="@drawable/fifty_fifty" />

                            <LinearLayout
                                android:id="@+id/layer_btn_buy_fifty_fifty"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_below="@+id/img114"
                                android:background="@drawable/secondary_with_radius_bottom"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/coin_coin" />

                                <TextView
                                    android:id="@+id/txt_price_fifty_fifty_buy_with_coin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="6dp"
                                    android:fontFamily="@font/poppins_light"
                                    android:text="25"
                                    android:textAlignment="center"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="24sp" />


                            </LinearLayout>


                        </RelativeLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/primary_15px"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="20dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_light"
                                android:paddingHorizontal="20dp"
                                android:text="@string/use_50_50_lifeline_for_difficult_question"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/poppins_extra_bold"
                                android:text="X 5"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                        </LinearLayout>


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="30dp"
                            android:gravity="center">

                            <LinearLayout
                                android:id="@+id/layer_fifty_fifty_coin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="52dp"
                                    android:layout_height="52dp"
                                    android:src="@drawable/fifty_fifty" />
                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/layer_btn_buy_fifty_fifty_package"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/layer_fifty_fifty_coin"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/bg_orange_round_with_border_15px"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="1dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/coin_coin" />

                                <TextView
                                    android:id="@+id/txt_price_fifty_fifty_package"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:fontFamily="@font/poppins_light"
                                    android:text="100"
                                    android:textAlignment="center"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="20sp" />

                            </LinearLayout>


                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardview_timer_buy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:elevation="0dp"
                app:cardCornerRadius="15dp"
                app:layout_constraintTop_toBottomOf="@+id/cardview_fifty_fifty_buy">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="@string/timer"
                        android:textAllCaps="false"
                        android:textColor="@color/orange"
                        android:textSize="20sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingHorizontal="0dp"
                        android:paddingVertical="20dp">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/primary_15px"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img113timer"
                                android:layout_width="46dp"
                                android:layout_height="46dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginVertical="20dp"
                                android:src="@drawable/timer_sand" />

                            <LinearLayout
                                android:id="@+id/layer_btn_watch_to_get_timer"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_below="@+id/img113timer"
                                android:background="@drawable/secondary_with_radius_bottom"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/video_ad" />

                            </LinearLayout>

                        </RelativeLayout>

                        <View
                            android:layout_width="10dp"
                            android:layout_height="10dp" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/primary_15px"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img114timer"
                                android:layout_width="46dp"
                                android:layout_height="46dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginVertical="20dp"
                                android:src="@drawable/timer_sand" />

                            <LinearLayout
                                android:id="@+id/layer_btn_buy_timer"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_below="@+id/img114timer"
                                android:background="@drawable/secondary_with_radius_bottom"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/coin_coin" />

                                <TextView
                                    android:id="@+id/txt_price_timer_buy_with_coin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="6dp"
                                    android:fontFamily="@font/poppins_light"
                                    android:text="25"
                                    android:textAlignment="center"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="24sp" />


                            </LinearLayout>


                        </RelativeLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/primary_15px"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="20dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_light"
                                android:paddingHorizontal="20dp"
                                android:text="@string/extend_timer_when_time_is_run_out"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/poppins_extra_bold"
                                android:text="X 5"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
