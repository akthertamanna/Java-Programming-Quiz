<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".activity.QuizPlayActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <RelativeLayout
          android:id="@+id/layer_top_ad_quiz"
          android:gravity="center"
          android:background="@color/primary"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <RelativeLayout
          android:id="@+id/layer_top_quiz"
          android:paddingHorizontal="30dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:orientation="horizontal"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/layer_top_ad_quiz">

          <TextView
              android:id="@+id/txt_level_title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentStart="true"
              android:layout_centerVertical="true"
              android:layout_marginEnd="5dp"
              android:layout_toStartOf="@+id/linearLayout2"
              android:fontFamily="@font/poppins_bold"
              android:maxLines="2"
              android:text="@string/category"
              android:textAlignment="viewStart"
              android:textAllCaps="true"
              android:textColor="@color/title_on_light"
              android:textSize="@dimen/quizPlayTitle" />

          <LinearLayout
              android:id="@+id/linearLayout2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
              android:layout_centerVertical="true"
              android:gravity="center_horizontal"
              android:orientation="horizontal">

              <include
                  android:id="@+id/layout_quiz_coin"
                  layout="@layout/layout_coins"/>

          </LinearLayout>

      </RelativeLayout>

      <RelativeLayout
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/layer_top_quiz"
          android:paddingHorizontal="30dp"
          android:layout_marginTop="45dp"
          android:id="@+id/layer_question_card"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <com.google.android.material.card.MaterialCardView
              android:layout_centerHorizontal="true"
              android:backgroundTint="#80D9D9D9"
              app:cardElevation="0dp"
              app:cardCornerRadius="15dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <RelativeLayout
                  android:paddingHorizontal="15dp"
                  android:paddingVertical="30dp"
                  android:minHeight="145dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

                  <TextView
                      android:id="@+id/txt_current_question"
                      android:layout_centerInParent="true"
                      android:fontFamily="@font/poppins_regular"
                      android:textColor="@color/title_on_light"
                      android:textSize="15sp"
                      android:textAlignment="center"
                      android:text="@string/app_name"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>

              </RelativeLayout>

          </com.google.android.material.card.MaterialCardView>

      </RelativeLayout>

      <LinearLayout
          app:layout_constraintTop_toTopOf="@+id/layer_question_card"
          app:layout_constraintBottom_toTopOf="@+id/layer_question_card"
          android:gravity="center"
          android:layout_marginTop="0dp"
          android:id="@+id/layer_action_buttons"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingVertical="10dp"
          android:orientation="horizontal">

          <LinearLayout
              android:layout_marginHorizontal="2dp"
              android:background="@drawable/primary_circle"
              android:id="@+id/layout_question_count"
              android:gravity="center"
              android:orientation="vertical"
              android:layout_width="48dp"
              android:layout_height="48dp">

              <TextView
                  android:id="@+id/txt_total_questions"
                  android:text="1/10"
                  android:fontFamily="@font/poppins_light"
                  android:textColor="@color/white"
                  android:textSize="17sp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
          </LinearLayout>

          <RelativeLayout
              android:id="@+id/layer_btn_hint"
              android:layout_marginHorizontal="2dp"
              android:layout_gravity="center"
              android:layout_width="58dp"
              android:layout_height="48dp"
              android:gravity="center">

              <LinearLayout
                  android:layout_centerHorizontal="true"
                  android:background="@drawable/primary_circle"
                  android:id="@+id/layer_hint"
                  android:gravity="center"
                  android:orientation="vertical"
                  android:layout_width="48dp"
                  android:layout_height="48dp">

                  <ImageView
                      android:contentDescription="@string/todo"
                      android:src="@drawable/baseline_lightbulb_24"
                      android:layout_width="30dp"
                      android:layout_height="30dp"/>


              </LinearLayout>

              <LinearLayout
                  android:layout_marginEnd="-5dp"
                  android:background="@drawable/bg_circle_white"
                  android:id="@+id/layout_text_hint"
                  android:gravity="center"
                  android:layout_alignEnd="@+id/layer_hint"
                  android:orientation="vertical"
                  android:layout_width="20dp"
                  android:layout_height="20dp">

                  <TextView
                      android:id="@+id/txt_hint_available"
                      android:text="1"
                      android:textSize="10sp"
                      android:textAlignment="center"
                      android:textColor="@color/black"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>

                  <ImageView
                      android:visibility="gone"
                      android:id="@+id/img_hint_video"
                      android:padding="4dp"
                      android:src="@drawable/baseline_ondemand_video_24"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>

              </LinearLayout>

          </RelativeLayout>

          <RelativeLayout
              android:id="@+id/layer_btn_fifty_fifty"
              android:layout_marginHorizontal="2dp"
              android:layout_gravity="center"
              android:layout_width="58dp"
              android:layout_height="48dp"
              android:gravity="center">

              <LinearLayout
                  android:layout_centerHorizontal="true"
                  android:background="@drawable/primary_circle"
                  android:id="@+id/layout_fifty_fifty"
                  android:gravity="center"
                  android:orientation="vertical"
                  android:layout_width="48dp"
                  android:layout_height="48dp">

                  <ImageView
                      android:contentDescription="@string/todo"
                      android:src="@drawable/fifty_fifty"
                      android:layout_width="30dp"
                      android:layout_height="30dp"/>


              </LinearLayout>

              <LinearLayout
                  android:layout_marginEnd="-5dp"
                  android:background="@drawable/bg_circle_white"
                  android:id="@+id/layout_text_fifty_fifty"
                  android:gravity="center"
                  android:layout_alignEnd="@+id/layout_fifty_fifty"
                  android:orientation="vertical"
                  android:layout_width="20dp"
                  android:layout_height="20dp">

                  <TextView
                      android:id="@+id/txt_fifty_fifty"
                      android:text="1"
                      android:textSize="10sp"
                      android:textAlignment="center"
                      android:textColor="@color/black"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>

                  <ImageView
                      android:visibility="gone"
                      android:id="@+id/img_fifty_fifty_video"
                      android:padding="4dp"
                      android:src="@drawable/baseline_ondemand_video_24"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>

              </LinearLayout>

          </RelativeLayout>

          <RelativeLayout
              android:id="@+id/layer_btn_timer_feature"
              android:layout_marginHorizontal="2dp"
              android:layout_gravity="center"
              android:layout_width="58dp"
              android:layout_height="48dp"
              android:gravity="center">

              <LinearLayout
                  android:layout_centerHorizontal="true"
                  android:background="@drawable/primary_circle"
                  android:id="@+id/layout_timer_feature"
                  android:gravity="center"
                  android:orientation="vertical"
                  android:layout_width="48dp"
                  android:layout_height="48dp">

                  <ImageView
                      android:contentDescription="@string/todo"
                      android:src="@drawable/timer_sand"
                      android:layout_width="30dp"
                      android:layout_height="30dp"/>

              </LinearLayout>

              <LinearLayout

                  android:layout_marginEnd="-5dp"
                  android:background="@drawable/bg_circle_white"
                  android:id="@+id/layout_text_timer"
                  android:gravity="center"
                  android:layout_alignEnd="@+id/layout_timer_feature"
                  android:orientation="vertical"
                  android:layout_width="20dp"
                  android:layout_height="20dp">

                  <TextView
                      android:id="@+id/txt_timer_feature"
                      android:text="1"
                      android:textSize="10sp"
                      android:textAlignment="center"
                      android:textColor="@color/black"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>


                  <ImageView
                      android:visibility="gone"
                      android:id="@+id/img_timer_feature_video"
                      android:padding="4dp"
                      android:src="@drawable/baseline_ondemand_video_24"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>

              </LinearLayout>

          </RelativeLayout>

          <LinearLayout
              android:layout_marginHorizontal="2dp"
              android:background="@drawable/primary_circle"
              android:id="@+id/layout_timer"
              android:gravity="center"
              android:orientation="vertical"
              android:layout_width="48dp"
              android:layout_height="48dp">

              <TextView
                  android:id="@+id/txt_timer"
                  android:text="30"
                  android:fontFamily="@font/poppins_light"
                  android:textColor="@color/white"
                  android:textSize="17sp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
          </LinearLayout>

      </LinearLayout>

      <LinearLayout
          android:id="@+id/layer_hint_text"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginVertical="10dp"
          android:paddingHorizontal="30dp"
          android:gravity="center"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/layer_question_card">

          <TextView
              android:id="@+id/txt_hint"
              android:paddingVertical="5dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/sample_hint"
              android:fontFamily="@font/poppins_regular"
              android:textAlignment="center"
              android:textAllCaps="false"
              android:textColor="@color/title_on_light"
              android:textSize="14sp" />

      </LinearLayout>

      <LinearLayout
          android:paddingHorizontal="30dp"
          android:id="@+id/layer_answer_buttons"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="20dp"
          android:layout_marginTop="10dp"
          android:gravity="center"
          android:orientation="vertical"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/layer_hint_text">


          <androidx.appcompat.widget.AppCompatButton
              android:id="@+id/btn_option1"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              style="@style/QuizPossibleAnswerButton"
              android:layout_marginBottom="8dp"
              android:paddingHorizontal="10dp"
              android:paddingVertical="10dp"
              android:text="@string/option_text" />

          <androidx.appcompat.widget.AppCompatButton
              android:id="@+id/btn_option2"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              style="@style/QuizPossibleAnswerButton"
              android:layout_marginBottom="8dp"
              android:paddingHorizontal="10dp"
              android:paddingVertical="10dp"
              android:text="@string/option_text" />

          <androidx.appcompat.widget.AppCompatButton
              android:id="@+id/btn_option3"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              style="@style/QuizPossibleAnswerButton"
              android:layout_marginBottom="8dp"
              android:paddingHorizontal="10dp"
              android:paddingVertical="10dp"
              android:text="@string/option_text" />

          <androidx.appcompat.widget.AppCompatButton
              android:id="@+id/btn_option4"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              style="@style/QuizPossibleAnswerButton"
              android:layout_marginBottom="8dp"
              android:paddingHorizontal="10dp"
              android:paddingVertical="10dp"
              android:text="@string/option_text" />

      </LinearLayout>

      <LinearLayout
          app:layout_constraintTop_toBottomOf="@+id/layer_answer_buttons"
          android:gravity="center"
          android:paddingHorizontal="30dp"
          android:id="@+id/layer_bottom_action_buttons"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingVertical="10dp"
          android:orientation="horizontal">

          <LinearLayout
              android:layout_marginHorizontal="5dp"
              android:background="@drawable/primary_circle"
              android:id="@+id/layer_btn_back"
              android:gravity="center"
              android:orientation="vertical"
              android:layout_width="48dp"
              android:layout_height="48dp">

              <ImageView
                  android:contentDescription="@string/todo"
                  android:src="@drawable/back_white"
                  android:layout_width="30dp"
                  android:layout_height="30dp"/>
          </LinearLayout>

          <LinearLayout
              android:layout_marginHorizontal="5dp"
              android:background="@drawable/primary_circle"
              android:id="@+id/layer_btn_restart"
              android:gravity="center"
              android:orientation="vertical"
              android:layout_width="48dp"
              android:layout_height="48dp">

              <ImageView
                  android:contentDescription="@string/todo"
                  android:src="@drawable/baseline_replay_24"
                  android:layout_width="30dp"
                  android:layout_height="30dp"/>
          </LinearLayout>

          <LinearLayout
              android:layout_marginHorizontal="5dp"
              android:background="@drawable/primary_circle"
              android:id="@+id/layer_btn_sound"
              android:gravity="center"
              android:orientation="vertical"
              android:layout_width="48dp"
              android:layout_height="48dp">

              <ImageView
                  android:id="@+id/img_volume"
                  android:contentDescription="@string/todo"
                  android:src="@drawable/baseline_volume_up_24"
                  android:layout_width="30dp"
                  android:layout_height="30dp"/>
          </LinearLayout>

          <LinearLayout
              android:layout_marginHorizontal="5dp"
              android:background="@drawable/primary_circle"
              android:id="@+id/layer_btn_pause_resume"
              android:gravity="center"
              android:orientation="vertical"
              android:layout_width="48dp"
              android:layout_height="48dp">

              <ImageView
                  android:id="@+id/img_pause_resume"
                  android:contentDescription="@string/todo"
                  android:src="@drawable/baseline_pause_24"
                  android:layout_width="30dp"
                  android:layout_height="30dp"/>
          </LinearLayout>


      </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>