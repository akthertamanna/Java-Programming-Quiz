<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QuizGame" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/on_background</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Other UI Elements -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>

        <item name="android:textColorPrimary">@color/title_on_light</item>
        <item name="android:textColorSecondary">@color/on_background</item>

    </style>

    <style name="Theme.QuizGame.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.QuizGame.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.QuizGame.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>


    <style name="QuizPossibleAnswerButton" parent="Widget.AppCompat.Button">
        <!-- Remove uppercase text -->
        <item name="textAllCaps">false</item>
        <!-- Set custom background drawable -->
        <item name="android:background">@drawable/primary_15px</item>
        <!-- Customize text appearance -->
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textStyle">normal</item>
        <!-- Remove elevation -->
        <item name="android:elevation">0dp</item>
        <item name="android:translationZ">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <!-- Remove ripple animation if needed -->
        <item name="rippleColor">@android:color/transparent</item>
    </style>


    <style name="QuizHomeButton" parent="Widget.AppCompat.Button">
        <!-- Remove uppercase text -->
        <item name="textAllCaps">true</item>
        <!-- Set custom background drawable -->
        <item name="android:background">@drawable/home_btn_bg</item>
        <!-- Customize text appearance -->
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <!-- Remove elevation -->
        <item name="android:elevation">0dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:translationZ">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <!-- Remove ripple animation if needed -->
        <item name="rippleColor">@android:color/transparent</item>
    </style>


    <style name="NormalButton" parent="Widget.AppCompat.Button">

        <!-- Remove elevation -->
        <item name="android:elevation">0dp</item>
        <item name="android:translationZ">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <!-- Remove ripple animation if needed -->
        <item name="rippleColor">@android:color/transparent</item>
    </style>


    <style name="QuizHomeButton2" parent="Widget.AppCompat.Button">
        <!-- Remove uppercase text -->
        <item name="textAllCaps">true</item>
        <!-- Set custom background drawable -->
<!--        <item name="android:background">@drawable/primary_btn</item>-->
        <!-- Customize text appearance -->
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <!-- Remove elevation -->
        <item name="android:elevation">0dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:translationZ">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <!-- Remove ripple animation if needed -->
        <item name="rippleColor">@android:color/transparent</item>
    </style>


