<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/title_on_light">


    <RelativeLayout
        android:id="@+id/layer_btn_coin"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="2dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/layer_coin"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/coin_coin" />


            <TextView
                android:id="@+id/txt_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:gravity="center"
                android:text="@string/_10"
                android:textAlignment="center"
                android:textColor="@color/title_on_dark"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_text_coin"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignEnd="@+id/layer_coin"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="-0dp"
            android:background="@drawable/secondary_circle"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/img_coin_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_add_24" />

        </LinearLayout>


    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/constraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RelativeLayout
            android:id="@+id/layer_btn_hint"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="2dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/layer_btn_fifty_fifty"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/layer_hint"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/baseline_lightbulb_24" />


                <TextView
                    android:id="@+id/txt_hint_available"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_light"
                    android:gravity="center"
                    android:text="@string/_10"
                    android:textAlignment="center"
                    android:textColor="@color/title_on_dark"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_text_hint"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignEnd="@+id/layer_hint"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="-0dp"
                android:background="@drawable/secondary_circle"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/img_hint_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_add_24" />

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layer_btn_fifty_fifty"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="2dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/layer_btn_timer_feature"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/layer_btn_hint"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/layout_fifty_fifty"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/primary_circle"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/fifty_fifty" />


                <TextView
                    android:id="@+id/txt_fifty_fifty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_light"
                    android:gravity="center"
                    android:text="@string/_10"
                    android:textAlignment="center"
                    android:textColor="@color/title_on_dark"
                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_text_fifty_fifty"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignEnd="@+id/layout_fifty_fifty"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="-0dp"
                android:background="@drawable/secondary_circle"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/img_fifty_fifty_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:src="@drawable/baseline_add_24" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layer_btn_timer_feature"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="2dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/layer_btn_fifty_fifty"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/layout_timer_feature"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/primary_circle"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/timer_sand" />


                <TextView
                    android:id="@+id/txt_timer_feature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_light"
                    android:gravity="center"
                    android:text="@string/_10"
                    android:textAlignment="center"
                    android:textColor="@color/title_on_dark"
                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_text_timer"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignEnd="@+id/layout_timer_feature"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="-0dp"
                android:background="@drawable/secondary_circle"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/img_timer_feature_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:src="@drawable/baseline_add_24" />

            </LinearLayout>

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>